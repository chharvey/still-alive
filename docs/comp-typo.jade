      include _includes/_comp-typo.acronyms.pug
    +newSection(3, Docs.DOCS.find('comp-typo.html#camo-links'))
      include _includes/_comp-typo.camo-links.pug
  +newSection(2, Docs.DOCS.find('comp-typo.html#breadcrumbs'))
    include _includes/_comp-typo.breadcrumbs.pug

block append scripts
  script.
    var tables = $('#tabledemo1, #tabledemo2')
    $('#c-Table form input').change(function () {
      if (this.checked) { tables.addClass($(this).val()) }
      else              { tables.removeClass($(this).val()) }
    })
    $('#reset-tables').click(function () {
      $('#c-Table form input').each(function () {
        tables.removeClass($(this).val())
      })
    })
