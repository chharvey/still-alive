    include _includes/_comp-typo.lede-drop-cap-components.pug
  +newSection(2, Docs.DOCS.find('comp-typo.html#caption-component'))
    include _includes/_comp-typo.caption-component.pug
  +newSection(2, Docs.DOCS.find('comp-typo.html#pull-quote-component'))
    include _includes/_comp-typo.pull-quote-component.pug
  +newSection(2, Docs.DOCS.find('comp-typo.html#action-list-component'))
    include _includes/_comp-typo.action-list-component.pug
  +newSection(2, Docs.DOCS.find('comp-typo.html#footnotes-list-component'))
